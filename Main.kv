WindowManager:
    Login:
    Class_7:
    Chapter_1_Screen:
    Chapter_2_Screen:
    Chapter_3_Screen:
    Chapter_4_Screen:
    Chapter_5_Screen:

<Login>:
    name: 'login'
    MDTextField:
        id: username_field
        hint_text: "Enter Username"
        helper_text: "Enter a Valid Username"
        helper_text_mode: "on_focus"
        pos_hint: {'center_x': .5, 'center_y': .6}
        icon_right_color: app.theme_cls.primary_color
        size_hint_x: None
        icon_right: 'eye-plus'
        width: 400
        multiline: False
        required: True

    MDTextField:
        id: password_field
        hint_text: "Enter Password"
        helper_text: "Enter a Valid Password"
        helper_text_mode: "on_focus"
        pos_hint: {'center_x': .5, 'center_y': .4}
        icon_right: "form-textbox-password"
        icon_right_color: app.theme_cls.primary_color
        size_hint_x: None
        icon_right: 'eye-minus'
        width: 400
        multiline: False
        password: True
        required: True

    MDFillRoundFlatIconButton:
        text: "Login"
        icon: "login"
        pos_hint: {'center_x': .5, 'center_y': .3}
        size_hint_x: None
        width: 30
        on_release: root.User_login()

    MDBottomAppBar:
        MDToolbar:
            title: 'SMS - Class 7'



<Class_7>:
    name: 'class_7'

    ScrollView:
        MDGridLayout:
            cols: 1
            size_hint_y: None
            height: dp(2000)
            spacing: 20
            padding: 10

            MDCard:
                orientation: 'vertical'
                id: card_1
                size_hint_y: .3
                spacing: 20
                
                MDLabel:
                    id: chapter_1_heading
                    halign: 'center'
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)

            MDCard:
                orientation: 'vertical'
                id: card_2
                size_hint: (.9, .2)
                spacing: 20

                
                MDLabel:
                    id: chapter_2_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'


            MDCard:
                orientation: 'vertical'
                id: card_3
                size_hint: (.9, .2)
                spacing: 20
                
                MDLabel:
                    id: chapter_3_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'
            
            MDCard:
                orientation: 'vertical'
                id: card_4
                size_hint: (.9, .2)
                spacing: 20
                
                MDLabel:
                    id: chapter_4_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'

            MDCard:
                orientation: 'vertical'
                id: card_5
                size_hint: (.9, .2)
                spacing: 20
                
                MDLabel:
                    id: chapter_5_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'
                    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        MDRaisedButton:
            text: 'Screen 1'
            on_release: app.root.current = 'chapter_1'

        MDRaisedButton:
            text: 'Screen 2'
            on_release: app.root.current = 'chapter_2'
        
        MDRaisedButton:
            text: 'Screen 3'
            on_release: app.root.current = 'chapter_3'

        MDRaisedButton:
            text: 'Screen 4'
            on_release: app.root.current = 'chapter_4'

        MDRaisedButton:
            text: 'Screen 5'
            on_release: app.root.current = 'chapter_5'

    


<Chapter_1_Screen>:
    name: 'chapter_1'

    NavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: 'vertical'
                    id: box
                    MDToolbar:
                        title: "SMS - Class 7"
                        elevation: 10
                        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
                        right_action_items: [['magnify', lambda x: nav_drawer.toggle_nav_drawer()]]
                        # pos_hint: {'top': 1}
                    
                    ScrollView:
                        MDGridLayout:
                            cols: 1
                            size_hint_y: None
                            height: dp(1500)
                            spacing: 20
                            padding: 10

                            MDCard:
                                id: true_false_card
                                orientation: 'vertical'
                                size_hint_y: .5
                                spacing: 20
                                padding: 5
                                    
                                MDLabel:
                                    text: 'True/Flase'
                                    halign: 'center'
                                    font_style: 'H4'
                                    theme_text_color: 'Secondary'
                                    size_hint: (1, .2)
                                    bold: True
                                    
                            MDCard:
                                id: fill_in_blanks_card
                                orientation: 'vertical'
                                size_hint_y: .5
                                spacing: 20
                                padding: 5
                                    
                                MDLabel:
                                    text: 'Fill in the Blanks'
                                    halign: 'center'
                                    font_style: 'H4'
                                    theme_text_color: 'Secondary'
                                    size_hint: (1, .2)
                                    bold: True

                            MDCard:
                                orientation: 'vertical'
                                size_hint_y: .5
                                # spacing: 2
                                padding: 20
                                    
                                MDLabel:
                                    text: 'Questions/Answers'
                                    halign: 'center'
                                    font_style: 'H4'
                                    theme_text_color: 'Secondary'
                                    size_hint: (1, .1)
                                    bold: True
                                ScrollView:
                                    MDGridLayout:
                                        cols:1
                                        spacing: 10
                                        id: question_answer_card
                                    
                    
        MDNavigationDrawer:
            id: nav_drawer
            type: 'standard'
            BoxLayout:
                orientation: 'vertical'
                spacing: '8dp'
                padding: '8dp'
                Image:
                    source:'Images/logo.jpg'
                MDLabel:
                    text: 'SMS - Class 7'
                    font_style: 'H5'
                    size_hint_y: None
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: 'Home'
                            on_release: app.root.current = 'class_7'
                            IconLeftWidget:
                                icon: 'home-circle-outline'
                        OneLineIconListItem:
                            text: 'IDK'
                            IconLeftWidget:
                                icon: 'face-profile'
                        OneLineIconListItem:
                            text:'Logout'
                            IconLeftWidget:
                                icon: 'logout'

