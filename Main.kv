#:include Styles/Login/Login.kv
#:include Styles/Chapters/Chapter_1.kv
#:include Styles/Chapters/Chapter_2.kv

WindowManager:
    Chapter_1_Screen:
    Chapter_2_Screen:
    Login:
    Class_7:
    Chapter_3_Screen:
    Chapter_4_Screen:
    Chapter_5_Screen:

<Class_7>:
    name: 'class_7'

    ScrollView:
        MDGridLayout:
            cols: 1
            size_hint_y: None
            height: dp(2000)
            spacing: 20
            padding: 10

            MDCard:
                orientation: 'vertical'
                id: card_1
                size_hint_y: .3
                spacing: 20
                
                MDLabel:
                    id: chapter_1_heading
                    halign: 'center'
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)

            MDCard:
                orientation: 'vertical'
                id: card_2
                size_hint: (.9, .2)
                spacing: 20

                
                MDLabel:
                    id: chapter_2_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'


            MDCard:
                orientation: 'vertical'
                id: card_3
                size_hint: (.9, .2)
                spacing: 20
                
                MDLabel:
                    id: chapter_3_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'
            
            MDCard:
                orientation: 'vertical'
                id: card_4
                size_hint: (.9, .2)
                spacing: 20
                
                MDLabel:
                    id: chapter_4_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'

            MDCard:
                orientation: 'vertical'
                id: card_5
                size_hint: (.9, .2)
                spacing: 20
                
                MDLabel:
                    id: chapter_5_heading
                    font_style: 'H5'
                    italic: True
                    theme_text_color: 'Secondary'
                    bold: True
                    size_hint: (1, .2)
                    halign: 'center'
                    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 10
        MDRaisedButton:
            text: 'Screen 1'
            on_release: app.root.current = 'chapter_1'

        MDRaisedButton:
            text: 'Screen 2'
            on_release: app.root.current = 'chapter_2'
        
        MDRaisedButton:
            text: 'Screen 3'
            on_release: app.root.current = 'chapter_3'

        MDRaisedButton:
            text: 'Screen 4'
            on_release: app.root.current = 'chapter_4'

        MDRaisedButton:
            text: 'Screen 5'
            on_release: app.root.current = 'chapter_5'

    





<Chapter_3_Screen>:
    name: 'chapter_3'

<Chapter_4_Screen>:
    name: 'chapter_4'

<Chapter_5_Screen>:
    name: 'chapter_5'
